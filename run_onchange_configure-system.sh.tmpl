#!/bin/sh

# .osx {{ include "executable_dot_osx" | sha256sum }}
sudo ~/.osx


# Remove all apps from the Dock
defaults write com.apple.dock persistent-apps -array
killall "Dock" > /dev/null 2>&1
sleep 2

# Configure dock
# 1Password
dockutil --add "/Applications/1Password.app/" --position 0 --label "1Password"
# Google Chrome
dockutil --add "/Applications/Google Chrome.app/" --after "1Password" --label "Google Chrome"
# Blitzit
dockutil --add "/Applications/Blitzit.app/" --after "Google Chrome" --label "Blitzit"
# Notion
dockutil --add "/Applications/Notion.app/" --after "Blitzit" --label "Notion"
# Slack
dockutil --add "/Applications/Slack.app/" --after "Notion" --label "Slack"
# Microsoft Teams
dockutil --add "/Applications/Microsoft Teams.app/" --after "Slack" --label "Microsoft Teams"
# Warp 
dockutil --add "/Applications/Warp.app/" --after "Microsoft Teams" --label "Warp"
# Tower
dockutil --add "/Applications/Tower.app/" --after "Warp" --label "Tower"
# Phpstorm
dockutil --add "/Users/matthiashamacher/Applications/PhpStorm.app/" --after "Tower" --label "PhpStorm"
# Visual Studio Code
dockutil --add "/Applications/Visual Studio Code.app/" --after "PhpStorm" --label "Visual Studio Code"

## Add spacer
# Daily Use Apps
dockutil --add '' --type small-spacer --after "Notion"
# Communication Apps
dockutil --add '' --type small-spacer --after "Microsoft Teams"

killall "Dock" > /dev/null 2>&1
